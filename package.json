{
  "name": "@piyush/ai-chat-widget",
  "version": "1.0.1",
  "type": "module",
  "description": "A pluggable, standalone AI chatbot widget component for React applications with WebSocket support and form synchronization",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "chatbot",
    "ai",
    "ai-chat",
    "chat-widget",
    "websocket",
    "socket.io",
    "form-sync",
    "form-synchronization",
    "plugin",
    "component",
    "typescript",
    "react-component",
    "ai-assistant",
    "conversational-ui"
  ],
  "author": "Piyush chourey",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/piyushchourey/chatbot-plugin.git"
  },
  "homepage": "https://github.com/piyushchourey/chatbot-plugin#readme",
  "bugs": {
    "url": "https://github.com/piyushchourey/chatbot-plugin/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.537.0",
    "react-markdown": "^10.1.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
